<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/profile_background"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Header with Name -->
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="16dp"
            tools:text="Aminata Sall" />

        <!-- Email Text -->
        <TextView
            android:id="@+id/userEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            tools:text="aminata@example.com" />

        <!-- Phone Text -->
        <TextView
            android:id="@+id/userPhoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="2dp"
            tools:text="+1 929 227 1511" />

        <!-- Section Links (Orders, Settings, Help) -->

        <TextView
            android:id="@+id/btnOrders"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="24dp"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:text="@string/orders"
            android:textColor="@color/button_primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:text="@string/settings"
            android:textColor="@color/button_primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnHelp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:text="@string/help"
            android:textColor="@color/button_primary"
            android:textSize="16sp" />

        <!-- Additional Sections -->
        <TextView
            android:id="@+id/btnCredits"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:text="@string/credits_promos_and_gift_cards"
            android:textColor="@color/button_primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnLoyaltyCards"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:text="@string/add_loyalty_cards"
            android:textColor="@color/button_primary"
            android:textSize="16sp" />


        <!-- Family Section -->
        <TextView
            android:id="@+id/btnFamily"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:text="@string/family"
            android:textColor="@color/button_primary"
            android:textSize="16sp" />

        <!-- Sign Out Section -->
        <TextView
            android:id="@+id/logoutButton"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:text="@string/log_out"
            android:textColor="@color/button_secondary"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
